

forwardbutton
	while(buttonpressed && checksafe()==1)
		driveforward		

rightbutton
	while(buttonpressed && checksafe()==1)
		turn(2)

leftbutton
	while(buttonpressed && checksafe()==1)
		turn(1)


turn(int)
	while(checksafe()==1)
	if(1)
		left30
	if(2)
		right30
	if(3)
		180

int checksafe()	
	if rightbumper|| rightcliff
		turn(1);
		return=0
	if leftbumper || leftcliff
		turn(2)
		return=0
	if center cliff
		turn(3)
		return=0
	else return 1;

